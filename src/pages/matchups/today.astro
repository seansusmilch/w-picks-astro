---
import Layout from '@/layouts/Layout.astro';
import Matchup from '@/components/Matchup.astro';

const pb = Astro.locals.pb;
console.warn('Today page: just getting all matchups rn');
const matchups = await pb.collection('matchups').getFullList();
---

<Layout title='W Picks | Today'>
  <h1 class='text-4xl font-bold'>Today's Matchups</h1>
  <div class='grid grid-cols-1 gap-2'>
    {matchups.map((matchup) => <Matchup matchup={matchup} />)}
  </div>
</Layout>
